<UserControl x:Class="ClassicLogicEngineViewer.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassicLogicEngineViewer"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             Background="{Binding Fill}"
             Width="{x:Static local:ViewConstants.TileWidth}" Height="{x:Static local:ViewConstants.TileHeight}">
    <Grid>
        <Rectangle Visibility="{Binding IsGold}" VerticalAlignment="Bottom" Width="{x:Static local:ViewConstants.TileWidth2}" Height="{x:Static local:ViewConstants.TileHeight2}" Fill="Gold"></Rectangle>
    </Grid>
</UserControl>
