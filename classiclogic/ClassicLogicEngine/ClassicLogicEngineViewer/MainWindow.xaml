<Window x:Class="ClassicLogicEngineViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassicLogicEngineViewer"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="1000" Width="1500">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="Canvas" Width="1500" Height="1000"></Canvas>
        <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="TopCanvas" Width="1500" Height="1000"></Canvas>
        <CheckBox IsChecked="{Binding IsPlay}">Play</CheckBox>
    </Grid>
</Window>
